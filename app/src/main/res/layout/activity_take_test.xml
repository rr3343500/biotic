    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




        <RelativeLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/redColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/sidebar_menu"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_baseline_menu_24" />

            <TextView
                android:layout_width="wrap_content"
                android:text="Python Test"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:layout_marginLeft="25dp"
                android:layout_centerVertical="true"
                android:fontFamily="@font/lato_semi_bold"
                android:layout_height="wrap_content"/>


        </RelativeLayout>






    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="20dp"
        android:visibility="visible"
        android:id="@+id/mainview_test"
        android:layout_below="@id/appbar"
        android:layout_gravity="center_vertical"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/relativeLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/timer"
            tools:ignore="MissingConstraints" />

        <RelativeLayout
            android:id="@+id/timer"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <TextView
                android:layout_width="wrap_content"
                android:text="Question "
                android:visibility="gone"
                android:layout_alignParentLeft="true"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Time - "
                    android:textColor="@color/black"
                    android:layout_toLeftOf="@id/time"
                    android:fontFamily="@font/lato_semi_bold"
                    android:textSize="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/time"
                    android:fontFamily="@font/lato_semi_bold"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="1:30" />

            </LinearLayout>




        </RelativeLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:id="@+id/questionview"
            app:layout_constraintTop_toBottomOf="@id/timer"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="100dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/ques"
                    android:text="Q."
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:visibility="visible"
                    android:textSize="16dp"
                    android:fontFamily="@font/lato_regular"
                    android:paddingRight="10dp"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/question"
                    android:text="what is your name ?"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/lato_regular"
                    android:visibility="visible"
                    android:textSize="16dp"
                    app:layout_constraintLeft_toRightOf="@+id/ques"
                    tools:ignore="MissingConstraints" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="300px"
                    android:src="@drawable/men"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/ques"
                    android:scaleType="fitCenter"
                    tools:ignore="MissingConstraints" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </com.google.android.material.card.MaterialCardView>


        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/newoption"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/questionview"
            tools:ignore="MissingConstraints">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/Ans1Layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    tools:ignore="MissingConstraints">

                    <LinearLayout
                        android:id="@+id/ansview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/ans1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/redColor"
                            android:onClick="OnOptionChecked"
                            android:text="" />

                        <TextView
                         android:id="@+id/t1"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="what is your name ?"
                         android:textSize="16dp"
                         android:textColor="@color/black"
                         android:fontFamily="@font/lato_regular"
                         android:visibility="visible"
                       />



                 </LinearLayout>


                 <ImageView
                     android:id="@+id/imageView"
                     android:layout_width="wrap_content"
                     android:layout_height="300px"
                     android:layout_marginTop="10dp"
                     android:scaleType="fitCenter"
                     android:src="@drawable/men"
                     android:visibility="gone"
                     app:layout_constraintTop_toBottomOf="@id/ansview"
                     tools:ignore="MissingConstraints" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/Ans2Layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:id="@+id/ansview1"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content">

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/ans2"
                            android:buttonTint="@color/redColor"
                            android:onClick="OnOptionChecked"
                            android:text=""/>

                        <TextView
                            android:id="@+id/t2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="what is your name ?"
                            android:textSize="16dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/lato_regular"                            android:visibility="visible"
                            />



                    </LinearLayout>


                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="300px"
                        android:layout_marginTop="10dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/men"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@id/ansview1"
                        tools:ignore="MissingConstraints" />



                </androidx.constraintlayout.widget.ConstraintLayout>



            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/Ans3Layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:id="@+id/ansview2"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content">

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/ans3"
                            android:onClick="OnOptionChecked"
                            android:buttonTint="@color/redColor"
                            android:text=""/>

                        <TextView
                            android:id="@+id/t3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="what is your name ?"
                            android:textSize="16dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/lato_regular"
                            android:visibility="visible"
                            />



                    </LinearLayout>


                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="300px"
                        android:layout_marginTop="10dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/men"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@id/ansview2"
                        tools:ignore="MissingConstraints" />



                </androidx.constraintlayout.widget.ConstraintLayout>



            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/Ans4Layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:id="@+id/ansview3"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content">

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/ans4"
                            android:buttonTint="@color/redColor"
                            android:onClick="OnOptionChecked"
                            android:text=""/>

                        <TextView
                            android:id="@+id/t4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="what is your name ?"
                            android:textSize="16dp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/lato_regular"                            android:visibility="visible"
                            />



                    </LinearLayout>


                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="300px"
                        android:layout_marginTop="10dp"
                        android:scaleType="fitCenter"
                        android:visibility="gone"
                        android:src="@drawable/men"
                        app:layout_constraintTop_toBottomOf="@id/ansview3"
                        tools:ignore="MissingConstraints" />



                </androidx.constraintlayout.widget.ConstraintLayout>



            </androidx.constraintlayout.widget.ConstraintLayout>

        </RadioGroup>



        <TextView
            android:layout_width="wrap_content"
            android:text="Clear my Response"
            android:id="@+id/clear"
            android:layout_margin="10dp"
            android:paddingLeft="10dp"
            android:visibility="gone"
            android:textColor="@color/purple_700"
            app:layout_constraintTop_toBottomOf="@id/newoption"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />


        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/clear"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="20dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/prev"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/black"
                app:cardCornerRadius="25dp"
                android:layout_alignParentLeft="true"
                android:enabled="false"
                android:text="Prev" >


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/next"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/black"
                app:cardCornerRadius="25dp"
                android:layout_alignParentRight="true"
                android:text="Next" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_arrow_forward_24"
                    android:layout_height="wrap_content"/>


            </com.google.android.material.card.MaterialCardView>


        </RelativeLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/submit"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/relativeLayout"
            android:text="Submit"
            android:layout_marginTop="20dp"
            tools:ignore="MissingConstraints" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>


</ScrollView>