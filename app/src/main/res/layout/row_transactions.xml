<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        android:elevation="8dp"
        app:cardCornerRadius="16dp"
        android:layout_margin="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/transTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaction 1"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/payment_text"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/paidby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paid by : Upi"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                android:fontFamily="@font/montserrat_regular"
                app:layout_constraintTop_toBottomOf="@+id/transTitle"
                android:textColor="#808080"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date : 25/25/2021"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                android:fontFamily="@font/montserrat_regular"
                app:layout_constraintTop_toBottomOf="@+id/paidby"
                android:textColor="#808080"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/AmtUnr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INR 999"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                android:fontFamily="@font/montserrat_regular"
                app:layout_constraintTop_toBottomOf="@+id/paidby"
               app:layout_constraintEnd_toEndOf="parent"
                android:textColor="#808080"
                android:layout_marginTop="8dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>